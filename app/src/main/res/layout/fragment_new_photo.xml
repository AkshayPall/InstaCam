<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akshaypall.instacam.NewPhotoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.akshaypall.material.RatioLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            app:ratio="1">

            <ImageView
                android:id="@+id/new_photo_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.example.akshaypall.material.RatioLayout>

        <EditText
            android:id="@+id/new_photo_caption_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:hint="@string/new_photo_caption_hint" />
    </LinearLayout>
    <Button
        android:layout_marginTop="@dimen/new_photo_save_button_top_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/new_photo_save_button"
        android:background="@color/primary"
        android:text="@string/new_photo_save_button_text"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
</LinearLayout>